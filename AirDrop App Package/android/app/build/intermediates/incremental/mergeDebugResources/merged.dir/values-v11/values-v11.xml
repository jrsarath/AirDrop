<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/payumoney_accent</item>
        <item name="android:textColorPrimary">@color/payumoney_text_color</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
    </style>
    <style name="AppCompatAlertDialogStyle.Default">
        <item name="colorAccent">@color/app_bg</item>
        <item name="android:background">@color/payumoney_white</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>
    <style name="AppCompatAlertDialog_Anim" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
    </style>
    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/payumoney_white</item>
    </style>
    <style name="EditTextLineColor">
        <item name="colorControlActivated">@color/payumoney_text_color</item>
        <item name="colorControlNormal">@color/app_primary_text_disabled_material_light</item>
    </style>
    <style name="Local_Base.Theme.AppCompat.Dialog" parent="Base.V7.Theme.AppCompat.Dialog"/>
    <style name="OtpEditTextLineColor">
        <item name="colorControlActivated">@color/payumoney_text_color</item>
        <item name="colorControlNormal">@color/app_primary_text_disabled_material_light</item>
    </style>
    <style name="OtpEditTextStyle">
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/otpTextColor</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <!-- <item name="android:background">@drawable/bg_rounded_grey_border</item>-->
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/OtpEditTextLineColor</item>
        <item name="android:inputType">number|textNoSuggestions</item>
    </style>
    <style name="Payumoney.AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/payumoney_primary</item>
        <item name="colorPrimaryDark">@color/payumoney_primary_dark</item>
        <item name="colorAccent">@color/payumoney_accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorButtonNormal">@color/payumoney_primary</item>
        <!-- android:textColorPrimary is the  color of the title text
       in the Toolbar, in thedimen_16sp Theme.AppCompat theme:  -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/app_abc_primary_text_material_light</item>
        <!--This is to enable disable Text capitalisation all over APP-->
        <!-- <item name="textAllCaps">false</item>-->
        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <item name="android:textColorPrimaryInverse">@color/payumoney_white</item>
    </style>
    <style name="PayumoneyAppTheme" parent="Payumoney.AppTheme.Base">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="WithDrawCheckbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/payumoney_black</item>
        <item name="colorControlActivated">@color/app_bg</item>
    </style>
    <style name="WithDrawMoneyEditFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:textColor">#767677</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/dimen_15dp</item>
        <item name="android:paddingBottom">@dimen/dimen_15dp</item>
    </style>
</resources>